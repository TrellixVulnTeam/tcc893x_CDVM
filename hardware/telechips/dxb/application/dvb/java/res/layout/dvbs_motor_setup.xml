<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="30"
		android:layout_marginTop="10dp"
		android:orientation="horizontal">
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="15"
			android:layout_marginLeft="20dp"
			android:gravity="left"
			android:text="@string/dish_setup_motor_move"
			android:textSize="20dp"
			android:textColor="@color/color_1"	/>
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="15"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/bt_motor_left"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/button_arrow_left"
				android:focusable="false"	/>
			<TextView
				android:id="@+id/move_state"
				android:layout_height="wrap_content"
				android:layout_width="0dp"
				android:layout_weight="13"
				android:gravity="center"
				android:textSize="20dp"
				android:focusable="true"	/>
			<ImageView
				android:id="@+id/bt_motor_right"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/button_arrow_right"
				android:focusable="false"	/>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="30"
		android:orientation="horizontal">
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="15"
			android:layout_marginLeft="20dp"
			android:gravity="left"
			android:text="@string/dish_setup_motor_move_step"
			android:textSize="20dp"
			android:textColor="@color/color_1"	/>
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="15"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/bt_motor_step_left"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/button_arrow_left"
				android:focusable="true"	/>
			<TextView
				android:id="@+id/motor_move_step"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="13"
				android:textSize="20dp"
				android:gravity="center"
				android:focusable="true"	/>
			<ImageView
				android:id="@+id/bt_motor_step_right"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/button_arrow_right"
				android:focusable="true"	/>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="15"
			android:layout_marginLeft="20dp"
			android:gravity="left"
			android:text="@string/dish_setup_motor_position_save"
			android:textSize="20dp"
			android:textColor="@color/color_1"	/>
		<Button
			android:id="@+id/motor_position_save"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="15"
			android:textSize="20dp"
			android:gravity="center"
			android:focusable="true"	/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="15"
			android:layout_marginLeft="20dp"
			android:gravity="left"
			android:text="@string/dish_setup_motor_move_store"
			android:textSize="20dp"
			android:textColor="@color/color_1"	/>
		<Button
			android:id="@+id/motor_move_store"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="15"
			android:textSize="20dp"
			android:gravity="center"
			android:focusable="true"	/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal" >
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="15"
			android:layout_marginLeft="20dp"
			android:gravity="left"
			android:text="@string/dish_setup_motor_position_reset"
			android:textSize="20dp"
			android:textColor="@color/color_1"	/>
		<Button
			android:id="@+id/motor_position_reset"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="15"
			android:textSize="20dp"
			android:gravity="center"
			android:focusable="true"	/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/gr_motor_goto_x"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="15"
			android:layout_marginLeft="20dp"
			android:gravity="left"
			android:text="@string/goto_x"
			android:textSize="20dp"
			android:textColor="@color/color_1"	/>
		<Button
			android:id="@+id/motor_goto_x"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="15"
			android:textSize="20dp"
			android:gravity="center"
			android:focusable="true"
			android:text="@string/move"	/>
	</LinearLayout>
</LinearLayout>