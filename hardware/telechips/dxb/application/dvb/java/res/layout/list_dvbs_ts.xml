<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	android:paddingBottom="3px"
	android:paddingLeft="10px" >

	<CheckBox
		android:id="@+id/ts_checkbox"
		android:layout_width="0dp"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:clickable="false"
		android:focusable="false"	/>
    
	<TextView
		android:id="@+id/ts_id"
		android:layout_width="0dp"
		android:layout_weight="1"
		android:layout_height="fill_parent"
		android:layout_marginLeft="10px"
		android:textSize="20sp"
		android:gravity="center"
		android:layout_gravity="center_vertical"
		android:singleLine="true"
		android:text="@string/dish_setup_no" />

	<TextView
		android:id="@+id/frequency"
		android:layout_width="0dp"
		android:layout_height="fill_parent"
		android:layout_weight="4"
		android:paddingLeft="10px"
		android:textSize="20sp"
		android:gravity="center"
		android:layout_gravity="center_vertical"
		android:singleLine="true"
		android:text="@string/dish_setup_frequency" />

	<TextView
	  	android:id="@+id/symbol"
	  	android:layout_width="0dp"
	  	android:layout_height="fill_parent"
	  	android:layout_weight="4"
	  	android:paddingLeft="10px"
	  	android:textSize="20sp"
	  	android:gravity="center"
	  	android:layout_gravity="center_vertical"
	  	android:singleLine="true"
	  	android:text="@string/dish_setup_Symbol"/>

	<TextView
	  	android:id="@+id/polarisation"
	  	android:layout_width="0dp"
	  	android:layout_height="fill_parent"
	  	android:layout_weight="3"
	  	android:paddingRight="20px"
	  	android:gravity="center"
	  	android:layout_gravity="center_vertical"
	  	android:textSize="20sp"
	  	android:singleLine="true"
	  	android:ellipsize="marquee"  
		android:marqueeRepeatLimit="marquee_forever"
	  	android:text="@string/dish_setup_polarisation" />

</LinearLayout>