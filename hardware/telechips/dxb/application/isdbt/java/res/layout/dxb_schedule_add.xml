<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="#99111111"
	>
    <View
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="31"
        />
    
    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="144"
		android:orientation="horizontal"
        >
        <View
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			/>
        
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="2"
			android:background="#AA555555"
			android:orientation="vertical"
			>
			<View
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="3"
				/>
			        
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="188"
				android:orientation="horizontal"
				>
				<View
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="3"
					/>
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="188"
					android:orientation="vertical"
					android:background="#FF111111"
					>
					<TextView
						android:id="@+id/schedule_add_title"
						android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_weight="25"
						android:gravity="center"
						android:textColor="@color/ics_focus"
						android:textSize="25px"
						android:text="@string/event_add"
		                />
		            <View
						android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_weight="1"
						android:background="@color/ics_focus"
		                />
		            
		             <View
						android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_weight="2"
		                />
		             
				 	<include
						android:id="@+id/schedule_add_type"
		 				android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_weight="20"
						layout="@layout/dxb_schedule_add_type"
						>
					</include>	
		             
				 	<include
						android:id="@+id/schedule_add_no"
		 				android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_weight="20"
						layout="@layout/dxb_schedule_add_no"
						>
					</include>	
		             
				 	<include
						android:id="@+id/schedule_add_name"
		 				android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_weight="20"
						layout="@layout/dxb_schedule_add_name"
						>
					</include>	
		
				 	<LinearLayout
		 				android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_weight="20"
						android:orientation="horizontal"
		                >
		                <TextView
		                    android:id="@+id/schedule_add_info_date"
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="12"
							android:layout_marginLeft="10px"
							android:gravity="center_vertical"
							android:text="@string/start_date"
		                    />
		                <TextView
		                    android:id="@+id/schedule_add_date"
		 					android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="10"
							android:gravity="center_vertical"
							android:focusable="true"
		                   />
		            </LinearLayout>
		            
		            <LinearLayout
		 				android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_weight="20"
						android:orientation="horizontal"
		                >
		                <TextView
		                    android:id="@+id/schedule_add_info_start_time"
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="12"
							android:layout_marginLeft="10px"
							android:gravity="center_vertical"
							android:text="@string/start_time"
		                    />
		                <TextView
		                    android:id="@+id/schedule_add_start_time"
		 					android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="10"
							android:gravity="center_vertical"
							android:focusable="true"
		                   />
		            </LinearLayout>
		            
		            <LinearLayout
		 				android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_weight="20"
						android:orientation="horizontal"
		                >
		                <TextView
		                    android:id="@+id/schedule_add_info_end_time"
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="12"
							android:layout_marginLeft="10px"
							android:gravity="center_vertical"
							android:text="@string/end_time"
		                    />
		                <TextView
		                    android:id="@+id/schedule_add_end_time"
		 					android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="10"
							android:gravity="center_vertical"
							android:focusable="true"
		                   />
		            </LinearLayout>
		             
				 	<include
						android:id="@+id/schedule_add_repeat"
		 				android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_weight="20"
						layout="@layout/dxb_schedule_add_repeat"
						>
					</include>	
		             
				 	<include
						android:id="@+id/schedule_add_mode"
		 				android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_weight="20"
						layout="@layout/dxb_schedule_add_mode"
						>
					</include>
				</LinearLayout>
								
				<View
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="3"
					/>
			</LinearLayout>
			
			<View
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="3"
				/>
		</LinearLayout>
        
		<View
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			/>
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="2"
	    />
		
	<View
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
	 	android:background="@color/color_3"
	    />

	<View
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="4"
		android:background="@color/color_2"
	    />
			
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="13"
		android:background="@color/color_2"
		android:orientation="horizontal"
	    >
	    <View
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="3"
	        />
	    <Button
	        android:id="@+id/schedule_add_b_confirm"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@color/color_red"
			android:text="@string/confirm"
	        />
	    <TextView
	        android:id="@+id/schedule_add_tv_confirm"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center_vertical"
	        />
	    <View
	        
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="3"
	        />
	    <Button
	        android:id="@+id/schedule_add_b_exit"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@color/color_blue"
			android:text="@string/exit"
	        />
	    <TextView
	        android:id="@+id/schedule_add_tv_exit"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center_vertical"
	        />
	    <View
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="3"
	        />
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="4"
		android:background="@color/color_2"
	    />
</LinearLayout>