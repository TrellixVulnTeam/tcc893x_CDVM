<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	>
	
	<AbsoluteLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="20"
		>
		<TextView
			android:id="@+id/schedule_list_title_title"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:textColor="@color/ics_focus"
			android:text="@string/schedule"
			android:textSize="30px"
			/>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			>
			<View
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="15"
				/>
			<TextView
			    android:id="@+id/schedule_list_time"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="bottom"
			    />
			<View
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				/>
		</LinearLayout>
    </AbsoluteLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:background="@color/ics_focus"
	    />

	<View
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="4"
	    />
		
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="152"
		android:orientation="horizontal"
	    >
	    <View
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
	        />
	    
	    <LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="20"
			android:orientation="vertical"
	        >
	       	<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:background="@color/color_8"
				android:orientation="horizontal"
	       	    >
	       	    <TextView
	       	        android:id="@+id/schedule_list_title_event"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center"
					android:text="@string/event"
	       	        />
	       	    <TextView
	       	        android:id="@+id/schedule_list_title_program"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="2"
					android:gravity="center"
					android:text="@string/program"
	       	        />
	       	    <TextView
	       	        android:id="@+id/schedule_list_title_date"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center"
					android:text="@string/date"
	       	        />
	       	    <TextView
	       	        android:id="@+id/schedule_list_title_time"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="2"
					android:gravity="center"
					android:text="@string/time"
	       	        />
	       	    <TextView
	       	        android:id="@+id/schedule_list_title_repeat"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center"
					android:text="@string/repeat"
	       	        />
	       	    <TextView
	       	        android:id="@+id/schedule_list_title_status"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center"
					android:text="@string/status"
	       	        />
	       	</LinearLayout>
	        
			<ListView 
				android:id="@+id/schedule_list_list"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="11"
				/>
		</LinearLayout>
	    
	    <View
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
	        />
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="4"
	    />
		
	<View
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:background="@color/ics_focus"
	    />

	<View
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="4"
	    />
			
	<LinearLayout
	    android:id="@+id/schedule_list_button"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="13"
		android:orientation="horizontal"
	    >
	    <View
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
	        />
	    <Button
	        android:id="@+id/schedule_list_b_add"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@color/color_red"
			android:text="@string/add"
	        />
	    <TextView
	        android:id="@+id/schedule_list_tv_add"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center_vertical"
	        />
	    <View
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
	        />
	    <Button
	        android:id="@+id/schedule_list_b_edit"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@color/color_green"
			android:text="@string/edit"
	        />
	    <TextView
	        android:id="@+id/schedule_list_tv_edit"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center_vertical"
	        />
	    <View
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
	        />
	    <Button
	        android:id="@+id/schedule_list_b_del"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@color/color_yellow"
			android:text="@string/del"
	        />
	    <TextView
	        android:id="@+id/schedule_list_tv_del"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center_vertical"
	        />
	    <View
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
	        />
	    <Button
	        android:id="@+id/schedule_list_b_exit"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@color/color_blue"
			android:text="@string/exit"
	        />
	    <TextView
	        android:id="@+id/schedule_list_tv_exit"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center_vertical"
	        />
	    <View
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
	        />
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="4"
	    />
</LinearLayout>