<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
  
	<PreferenceCategory
		android:title="@string/language"
		>
		<ListPreference
			android:title="@string/audio"
			android:key="language_audio_select"
			>
		</ListPreference>
		<ListPreference
			android:title="@string/subtitle"
			android:key="language_subtitle_select"
			>
		</ListPreference>
	</PreferenceCategory>

	<PreferenceCategory
		android:title="@string/scan"
		>
		<ListPreference
			android:title="@string/countrycode"
			android:key="countrycode_select"
			android:entries="@array/countrycode_select_entries"
			android:entryValues="@array/countrycode_select_values"
			>
		</ListPreference>
		<EditTextPreference
			android:title="@string/manual"
			android:key="scan_manual_select"
			android:dialogTitle="@string/manual_scan"
			android:inputType="numberDecimal"
			android:maxLength="7"
			/>
	</PreferenceCategory>

	<PreferenceCategory
		android:title="@string/settings"
		>
		<ListPreference
			android:title="@string/subtitle"
			android:key="subtitle_select"
			android:entries="@array/subtitle_select_entries"
			android:entryValues="@array/subtitle_select_values"
			>
		</ListPreference>
		<ListPreference
			android:title="@string/storage"
			android:key="storage_select"
			>
		</ListPreference>
	</PreferenceCategory>
	
</PreferenceScreen>
